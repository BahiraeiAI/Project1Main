@model IEnumerable<Post>

@{
    ViewData["Title"] = "Your Uploaded Posts";
}

<div class="container mt-5">
    <h2 class="mb-4 text-center fw-bold">Your Uploaded Posts</h2>

    @if (Model is not null && Model.Any())
    {
        <div class="row">
            @foreach (var item in Model)
            {
                <div class="col-md-6 col-lg-4 mb-4">
                    <div class="card shadow-sm h-100 rounded-4">
                        <img src="@Url.Action("GetImage", "Dashboard", new { id = item.Id })"
                             class="card-img-top rounded-top-4"
                             alt="Post Image"
                             style="height: 225px; object-fit: cover;">

                        <div class="card-body d-flex flex-column">
                            <h5 class="card-title">@item.Title</h5>
                            <p class="card-text text-muted flex-grow-1">@item.Text</p>

                            <div class="d-flex justify-content-between align-items-center mt-3">
                                <div class="btn-group">
                                    <a asp-controller="Home" asp-action="Detail" asp-route-id="@item.Id" class="btn btn-sm btn-outline-primary">View</a>
                                    <a asp-controller="Dashboard" asp-action="Edit" asp-route-id="@item.Id" class="btn btn-sm btn-outline-secondary">Edit</a>
                                    <a asp-controller="Dashboard" asp-action="Delete" asp-route-id="@item.Id" class="btn btn-sm btn-outline-danger">Delete</a>
                                </div>
                                <small class="text-muted">Posted recently</small>
                            </div>
                        </div>
                    </div>
                </div>
            }
        </div>
    }
    else
    {
        <div class="alert alert-info text-center">
            No posts uploaded yet.
        </div>
    }
</div>