@model User

@{
    ViewData["Title"] = "User Dashboard";
}

<div class="container py-5">
    <div class="row justify-content-center">
        <div class="col-md-8 col-lg-6">
            <div class="card shadow-lg rounded-4 border-0">
                <div class="card-header bg-gradient bg-primary text-white text-center rounded-top-4">
                    <h4 class="mb-0 fw-bold">User Dashboard</h4>
                </div>
                <div class="card-body p-4">
                    <h5 class="mb-3 text-secondary">User Information</h5>
                    <ul class="list-group list-group-flush">
                        <li class="list-group-item d-flex justify-content-between">
                            <span class="fw-semibold">ID:</span> <span>@Model.Id</span>
                        </li>
                        <li class="list-group-item d-flex justify-content-between">
                            <span class="fw-semibold">Username:</span> <span>@Model.UserName</span>
                        </li>
                        <li class="list-group-item d-flex justify-content-between">
                            <span class="fw-semibold">Email:</span> <span>@Model.Email</span>
                        </li>
                    </ul>
                </div>
                <div class="card-footer text-center bg-light rounded-bottom-4">
                    <a asp-controller="Dashboard" asp-action="EditProfile" class="btn btn-outline-primary btn-sm">Edit Profile</a>
                </div>
            </div>
        </div>
    </div>
</div>
