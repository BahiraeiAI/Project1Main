@model PostViewModel

@{
    ViewData["Title"] = "Edit Post";
}

<div class="container mt-5">
    <div class="row justify-content-center">
        <div class="col-md-8">
            <div class="card shadow rounded-4">
                <div class="card-header bg-warning text-white text-center rounded-top-4">
                    <h3 class="mb-0">Edit Post</h3>
                </div>
                <div class="card-body">
                    <form method="post" asp-action="Edit" asp-controller="Dashboard" enctype="multipart/form-data">
                        <div class="mb-3">
                            <label asp-for="Title" class="form-label">Title</label>
                            <input asp-for="Title" class="form-control" placeholder="Edit title" />
                            <span asp-validation-for="Title" class="text-danger"></span>
                        </div>

                        <div class="mb-3">
                            <label asp-for="Description" class="form-label">Description</label>
                            <textarea asp-for="Description" class="form-control" rows="4" placeholder="Edit description..."></textarea>
                            <span asp-validation-for="Description" class="text-danger"></span>
                        </div>

                        <div class="mb-3">
                            <label asp-for="Image" class="form-label">Current Image</label>
                            <div class="mb-2">
                                <img src="@Url.Action("GetImage", "Dashboard", new { id = Model.Id })"
                                     alt="Post Image"
                                     class="img-fluid rounded shadow-sm"
                                     style="height: 225px; object-fit: cover; width: 100%;" />
                            </div>
                            <input asp-for="Image" type="file" class="form-control" />
                            <span asp-validation-for="Image" class="text-danger"></span>
                        </div>

                        <div class="d-grid mt-4">
                            <button type="submit" class="btn btn-warning btn-lg text-white">Update Post</button>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>