@model IEnumerable<Post>

@{
    ViewData["Title"] = "Home Page";
}

<div class="container mt-5">
    <div class="text-center mb-5">
        <h1 class="display-4 fw-bold">Welcome</h1>
        <p class="lead">
            Learn about <a href="https://learn.microsoft.com/aspnet/core" target="_blank">building Web apps with ASP.NET Core</a>.
        </p>
    </div>

    @if (Model is not null && Model.Any())
    {
        <div class="row">
            @foreach (var item in Model)
            {
                <div class="col-md-6 col-lg-4 mb-4">
                    <div class="card shadow-sm h-100 rounded-4">
                        <img src="@Url.Action("GetImage", "Home", new { id = item.Id })"
                             alt="Post Image"
                             class="card-img-top rounded-top-4"
                             style="height: 225px; object-fit: cover;">

                        <div class="card-body d-flex flex-column">
                            <h5 class="card-title">@item.Title</h5>
                            <p class="card-text text-muted flex-grow-1">@item.Text</p>

                            <div class="d-flex justify-content-between align-items-center mt-3">
                                <div class="btn-group">
                                    <a asp-controller="Home" asp-action="Detail" asp-route-id="@item.Id" class="btn btn-sm btn-outline-primary">View</a>
                                </div>
                                <small class="text-muted">Just now</small>
                            </div>
                        </div>
                    </div>
                </div>
            }
        </div>
    }
    else
    {
        <div class="alert alert-info text-center">
            No posts available yet.
        </div>
    }
</div>